source "https://rubygems.org"

# When updating Gemfile.lock, use the latest jekyll version:
gem "jekyll"

# Other dependencies
gem "html-proofer", "~>4"

# Ruby 3.3 warns about these being moved out of std lib and recommends adding
# them here:
gem "base64"
gem "csv"
gem "bigdecimal"

# Jekyll plugins:
group :jekyll_plugins do
  gem "jekyll-sitemap"
  gem 'jekyll-redirect-from'
  gem "jekyll-postcss"
end
